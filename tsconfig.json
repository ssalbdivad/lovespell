{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "dist",
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["ESNext", "dom", "dom.iterable"],
        "jsx": "react",
        "declaration": false,
        "exactOptionalPropertyTypes": false
    },
    "include": ["src"]
}
